@model IEnumerable<Entities.DTOs.UserDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Share/_layoutAdmin.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <strong class="text-danger text-uppercase">Tất cả sản phẩm</strong>
                @*<h1>@Session["Test"]</h1>*@
            </div>
            <div class="col-sm-6 text-right">
                <!--ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Blank Page</li>
                </ol-->
                <a href="@Url.Action("Create","Products")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> Thêm</a>
                <a href="@Url.Action("Trash","Products")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Thùng rác</a>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">

        <div class="card-body my-2">
            @*@Html.Partial("Message")*@
            <table class="table table-bordered table-striped" id="myTable">
                <thead>
                    <tr class="text-center">
                        <th style="width:100px">
                            Avatar
                        </th>
                        <th>
                            Tên người dùng
                        </th>
                        <th>
                            Giới tính
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Trạng thái
                        </th>

                        <th>Change</th>

                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr data-id='@item.Id'>
                            <td>
                                <img src="@item.AvatarUrl" alt="Hình ảnh" class="rounded-circle border w-50" />
                            </td>
                            <td>
                                @item.Fullname
                            </td>

                            <td>
                                    @item.Gender
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                Look
                            </td>
                            <td>
                                <a href="@Url.Action("Details","Products", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Chi tiết</a>
                                <a href="@Url.Action("Edit","Products", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i> Sữa</a>
                                <button class="btn btn-sm btn-danger btnDelete" data-id="@item.Id"><i class="fas fa-trash"></i> Xóa</button>

                            </td>

                        </tr>
                    }
                </tbody>


            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->











