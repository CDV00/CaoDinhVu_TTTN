@model Entities.DTOs.BrandDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Share/_layoutAdmin.cshtml";
}

<h1>Details</h1>

<h1>Chi tiết danh mục @Model.Name</h1>

<div class="pl-lg-5">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slug)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orders)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orders)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">

            <img src="@Html.DisplayFor(model => model.Image)" alt="Hình ảnh" style="height:200px" class="img-thumbnail" />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">

            @{ 
                if(Model.Status == 1)
                {
                    <span>Xuất bản</span>
                }
                else
                {
                    <span>Không xuất bản</span>
                }
            }

        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>