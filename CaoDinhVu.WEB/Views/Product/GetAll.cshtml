                </div> <!-- row.// -->
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ FILTER TOP END.// ================================= -->

        <header class="mb-3">
            <div class="form-inline">
                @*<strong class="mr-md-auto">@Model.Data.Count() Items found </strong>*@
                @*<select class="mr-2 form-control">
                    <option>Latest items</option>
                    <option>Trending</option>
                    <option>Most Popular</option>
                    <option>Cheapest</option>
                </select>
                <div class="btn-group">
                    <a href="page-listing-grid.html" class="btn btn-light active" data-toggle="tooltip" title="List view">
                        <i class="fa fa-bars"></i>
                    </a>
                    <a href="page-listing-large.html" class="btn btn-light" data-toggle="tooltip" title="Grid view">
                        <i class="fa fa-th"></i>
                    </a>
                </div>*@
            </div>
        </header><!-- sect-heading -->

        <div class="row">
            @foreach (var item in Model.Data)
            {
                <div class="col-md-3">
                    <a href="~/chi-tiet-san-pham/@item.Id">
                        <figure class="card card-product-grid">
                            <div class="img-wrap">
                                <img src="@item.Thumbnails">
                            </div> <!-- img-wrap.// -->
                            <figcaption class="info-wrap">
                                <a class="title mb-2 h5 text-sm-center">@item.Name</a>
                                <div class="text-sm-center  price-wrap">
                                    <span class="price">@((item.Price).ToString("#,##0"))VND</span>
                                    <small class="text-muted">/ sản phẩm</small>
                                </div> <!-- price-wrap.// -->

                                <hr>
                            </figcaption>
                        </figure>
                    </a>
                </div> <!-- col.// -->
            }



        </div> <!-- row end.// -->


        <nav class="mb-4" aria-label="Page navigation sample">
            <ul class="pagination">
                @{
                    if (Model.TotalPage == 1)
                    {
                        <li class="page-item disabled"><a class="page-link">Trang trước</a></li>
                        <li class="page-item active"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=1" value="1">1</a></li>
                        <li class="page-item disabled"><a class="page-link">Trang sau</a></li>
                    }
                    if (Model.TotalPage > 1)
                    {
                        if (Model.Page == 1)
                        {
                            <li class="page-item disabled"><a class="page-link">Trang trước </a></li>
                            for (int i = 1; i < Model.TotalPage + 1; i++)
                            {

                                if (i == Model.Page)
                                {
                                    <li class="page-item active"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@i">@i</a></li>
                                }

                            }
                            <li class="page-item"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@(Model.Page +1)">Trang sau </a></li>
                        }
                        else
                        {
                            if (Model.Page == Model.TotalPage)
                            {
                                <li class="page-item "><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@(Model.Page -1)">Trang trước </a></li>
                                for (int i = 1; i < Model.TotalPage + 1; i++)
                                {

                                    if (i == Model.Page)
                                    {
                                        <li class="page-item active"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@i">@i</a></li>
                                    }

                                }
                                <li class="page-item disabled"><a class="page-link">Trang sau </a></li>
                            }
                            else
                            {
                                <li class="page-item "><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@(Model.Page -1)">Trang trước </a></li>
                                for (int i = 1; i < Model.TotalPage + 1; i++)
                                {

                                    if (i == Model.Page)
                                    {
                                        <li class="page-item active"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@i">@i</a></li>
                                    }

                                }
                                <li class="page-item"><a class="page-link timkiem" href="~/tat-ca-san-pham?page=@(Model.Page +1)">Trang sau </a></li>
                            }
                        }
                    }
                }

            </ul>
        </nav>


     

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

