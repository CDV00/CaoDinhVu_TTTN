@model IEnumerable<Entities.DTOs.OrderDTO>
@{
    ViewBag.Title = "ProfileOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= SECTION PAGETOP ========================= -->
