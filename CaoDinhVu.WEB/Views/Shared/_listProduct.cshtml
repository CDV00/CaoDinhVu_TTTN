<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <div class="card mb-3">
            <div class="card-body">
                <!--<div class="row">
                    <div class="col-md-2"> Your are here: </div>--> <!-- col.// -->
                    <!--<nav class="col-md-8">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Category name</a></li>
                            <li class="breadcrumb-item"><a href="#">Sub category</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Items</li>
                        </ol>
                    </nav>--> <!-- col.// -->
                <!--</div>--> <!-- row.// -->
                <!--<hr>-->
                <div class="row filter" id="filter">

                    @*//////////*@
                    @*@await Html.PartialAsync("Filter")*@

                </div> <!-- row.// -->
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ FILTER TOP END.// ================================= -->

        <header class="mb-3">
            <div class="form-inline">
                <strong class="mr-md-auto">32 Items found </strong>
                <select class="mr-2 form-control">
                    <option>Latest items</option>
                    <option>Trending</option>
                    <option>Most Popular</option>
                    <option>Cheapest</option>
                </select>
                <div class="btn-group">
                    <a href="page-listing-grid.html" class="btn btn-light active" data-toggle="tooltip" title="List view">
                        <i class="fa fa-bars"></i>
                    </a>
                    <a href="page-listing-large.html" class="btn btn-light" data-toggle="tooltip" title="Grid view">
                        <i class="fa fa-th"></i>
                    </a>
                </div>
            </div>
        </header><!-- sect-heading -->

        <div class="row">
            @foreach (var item in Model.Data)
            {
                <div class="col-md-3">
                    <a href="~/chi-tiet-san-pham/@item.Id">
                        <figure class="card card-product-grid">
                            <div class="img-wrap">
                                <span class="badge badge-danger"> NEW </span>
                                <img src="@item.Thumbnails">
                            </div> <!-- img-wrap.// -->
                            <figcaption class="info-wrap">
                                <a class="title mb-2 h5 text-sm-center">@item.Name</a>
                                <div class="text-sm-center  price-wrap">
                                    <span class="price">@((item.Price).ToString("#,##0"))VND</span>
                                    <small class="text-muted">/ sản phẩm</small>
                                </div> <!-- price-wrap.// -->

                                <hr>
                            </figcaption>
                        </figure>
                    </a>
                </div> <!-- col.// -->
            }



        </div> <!-- row end.// -->


        <nav class="mb-4" aria-label="Page navigation sample">
            <ul class="pagination">
                @{
                    if (Model.TotalPage == 1)
                    {
                        <li class="page-item disabled"><a class="page-link">Trang trước</a></li>
                        <li class="page-item active"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=1" value="1">1</a></li>
                        <li class="page-item disabled"><a class="page-link">Trang sau</a></li>
                    }
                    if (Model.TotalPage > 1)
                    {
                        if (Model.Page == 1)
                        {
                            <li class="page-item disabled"><a class="page-link">Trang trước </a></li>
                            for (int i = 1; i < Model.TotalPage + 1; i++)
                            {

                                if (i == Model.Page)
                                {
                                    <li class="page-item active"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@i">@i</a></li>
                                }

                            }
                            <li class="page-item"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@(Model.Page +1)">Trang sau </a></li>
                        }
                        else
                        {
                            if (Model.Page == Model.TotalPage)
                            {
                                <li class="page-item "><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@(Model.Page -1)">Trang trước </a></li>
                                for (int i = 1; i < Model.TotalPage + 1; i++)
                                {

                                    if (i == Model.Page)
                                    {
                                        <li class="page-item active"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@i">@i</a></li>
                                    }

                                }
                                <li class="page-item disabled"><a class="page-link">Trang sau </a></li>
                            }
                            else
                            {
                                <li class="page-item "><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@(Model.Page -1)">Trang trước </a></li>
                                for (int i = 1; i < Model.TotalPage + 1; i++)
                                {

                                    if (i == Model.Page)
                                    {
                                        <li class="page-item active"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@i">@i</a></li>
                                    }

                                }
                                <li class="page-item"><a class="page-link timkiem" href="~/tim-kiem?keyWork=@ViewBag.keywork&page=@(Model.Page +1)">Trang sau </a></li>
                            }
                        }
                    }
                }

            </ul>
        </nav>


        <div class="box text-center">
            <p>Did you find what you were looking for？</p>
            <a href="" class="btn btn-light">Yes</a>
            <a href="" class="btn btn-light">No</a>
        </div>

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
